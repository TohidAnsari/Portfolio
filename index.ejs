    <script>
        function toggleTheme() {
            const html = document.documentElement;
            const isDark = html.classList.contains('dark');
            if (isDark) {
                html.classList.remove('dark');
                localStorage.setItem('theme', 'light');
            } else {
                html.classList.add('dark');
                localStorage.setItem('theme', 'dark');
            }
        }

        const canvas = document.getElementById('heroCanvas');
        const ctx = canvas.getContext('2d');
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;



        // Add a smooth transition effect for the cursor circle
        let cursorRadius = 50; // Initial cursor radius
        let targetRadius = 50; // Target radius for the cursor (this will change based on mouse movement)
        let currentRadius = cursorRadius; // Current radius, gradually transitions towards target

        // To smoothly transition, we'll use easing and adjust opacity
        let cursorOpacity = 0.5; // Initial opacity of the cursor circle
        let targetOpacity = 0.5; // Target opacity



        const particles = [];
        const colors = ['#ff0000', '#00ff00', '#2f2f2f0ff', '#ffff00', '#ff00ff', '#00ffff'];
        const cursor = { x: 0, y: 0, radius: 100 };

        class Particle {
            constructor(x, y, dx, dy, radius, color) {
                this.x = x;
                this.y = y;
                this.dx = dx;
                this.dy = dy;
                this.radius = radius;
                this.color = color;
            }

            draw() {
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2, false);
                ctx.fillStyle = this.color;
                ctx.fill();
            }

            update() {
                this.x += this.dx;
                this.y += this.dy;

                if (this.x + this.radius > canvas.width || this.x - this.radius < 0) {
                    this.dx = -this.dx;
                }

                if (this.y + this.radius > canvas.height || this.y - this.radius < 0) {
                    this.dy = -this.dy;
                }

                // Collision with cursor range
                const dist = Math.hypot(this.x - cursor.x, this.y - cursor.y);
                if (dist - this.radius < cursor.radius) {
                    const angle = Math.atan2(this.y - cursor.y, this.x - cursor.x);
                    this.dx = Math.cos(angle) * 2;
                    this.dy = Math.sin(angle) * 2;
                }

                particles.forEach(p => {
                    if (this !== p) {
                        const dist = Math.hypot(this.x - p.x, this.y - p.y);
                        if (dist - this.radius - p.radius < 1) {
                            this.dx = -this.dx;
                            this.dy = -this.dy;
                            p.dx = -p.dx;
                            p.dy = -p.dy;
                            this.color = colors[Math.floor(Math.random() * colors.length)];
                            p.color = colors[Math.floor(Math.random() * colors.length)];
                        }
                    }
                });

                this.draw();
            }
        }
        // Draw the cursor effect with smooth transition
        function drawCursorEffect() {
            ctx.beginPath();
            ctx.arc(cursor.x, cursor.y, currentRadius, 0, Math.PI * 2, false); // Use currentRadius for smoothness
            const gradient = ctx.createRadialGradient(cursor.x, cursor.y, 0, cursor.x, cursor.y, currentRadius);
            gradient.addColorStop(0, `rgba(255, 255, 255, ${cursorOpacity})`);
            gradient.addColorStop(1, `rgba(255, 255, 255, 0)`);
            ctx.fillStyle = gradient;
            ctx.fill();
        }

        function initParticles() {
            particles.length = 0;
            for (let i = 0; i < 30; i++) {
                const radius = Math.random() * 5 + 2;
                const x = Math.random() * (canvas.width - radius * 2) + radius;
                const y = Math.random() * (canvas.height - radius * 2) + radius;
                const dx = (Math.random() - 0.5) * 2;
                const dy = (Math.random() - 0.5) * 2;
                const color = colors[Math.floor(Math.random() * colors.length)];
                particles.push(new Particle(x, y, dx, dy, radius, color));
            }
        }

        // Animate the particles and the cursor effect together
        function animate() {
            ctx.clearRect(0, 0, canvas.width, canvas.height); // Clear the canvas

            smoothCursorTransition(); // Smooth transition of the cursor
            drawCursorEffect(); // Draw the smooth cursor

            particles.forEach(particle => particle.update()); // Update particles
            requestAnimationFrame(animate); // Loop the animation
        }




        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            initParticles();
        });

        // Function to update the cursor's smooth transition
        function smoothCursorTransition() {
            // Easing transition for radius and opacity
            currentRadius += (targetRadius - currentRadius) * 0.1; // Smoothly interpolate the radius
            cursorOpacity += (targetOpacity - cursorOpacity) * 0.1; // Smoothly interpolate opacity
        }

        window.addEventListener('mousemove', (e) => {
            const rect = canvas.getBoundingClientRect();  // Get canvas position relative to the viewport
            cursor.x = e.clientX - rect.left;  // Adjust mouse X coordinate relative to canvas
            cursor.y = e.clientY - rect.top;   // Adjust mouse Y coordinate relative to canvas

            // Change the cursor radius when the cursor moves (or add any other conditions you like)
            targetRadius = 70; // Increase the target radius for smoother effect
            targetOpacity = 0.3; // Slightly increase the opacity when moving
        });

        initParticles();
        animate();
    </script>

